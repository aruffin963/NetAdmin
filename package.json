{
  "name": "netadmin",
  "version": "1.0.0",
  "description": "Outil d'administration réseau et système pour ingénieurs",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=shared && npm run build --workspace=backend && npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:shared": "npm run build --workspace=shared",
    "test": "npm run test --workspaces",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/netadmin.git"
  },
  "keywords": [
    "network",
    "administration",
    "monitoring",
    "ip-management",
    "subnetting",
    "logs"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "express-session": "^1.18.2",
    "net-snmp": "^3.26.0",
    "passport": "^0.7.0",
    "passport-ldapauth": "^3.0.1",
    "ssh2": "^1.17.0"
  }
}
