# =====================================
# CONFIGURATION NETADMIN PRO - BACKEND
# =====================================
# Copier ce fichier vers .env et modifier les valeurs

# Environment et Serveur
NODE_ENV=development
PORT=5000

# Configuration Base de Données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=netadmin
DB_USER=postgres
DB_PASSWORD=admin
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Configuration Redis (Cache - Optionnel)
REDIS_URL=redis://localhost:6379

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Configuration Super Admin (optionnel - pour fallback sans LDAP)
# Générer le hash: npx bcryptjs-cli hash "votre-mot-de-passe"
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_PASSWORD_HASH=$2b$10$YourBcryptHashHereChange
# Note: Super admin ne fonctionne que si LDAP_URL n'est pas configuré OR comme fallback

# Configuration LDAP/Active Directory (optionnel)
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_BASE_DN=dc=example,dc=com
LDAP_SEARCH_BASE=ou=users,dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})
LDAP_USER_SEARCH_FILTER=(|(uid={{username}})(mail={{username}}))

# Configuration CORS
FRONTEND_URL=http://localhost:3000

# Configuration Logging
LOG_LEVEL=debug

# Configuration Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration Multi-tenant
ENABLE_MULTI_TENANT=true
DEFAULT_TENANT=acme

# Configuration Monitoring
ENABLE_SNMP=true
SNMP_COMMUNITY=public
SNMP_TIMEOUT=5000

# Configuration Email (pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuration Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30